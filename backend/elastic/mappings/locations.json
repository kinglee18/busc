  "settings" : {
    "index" : {
      "analysis" : {
        "filter" : {
          "spanish_stop_filter": {
            "type": "stop",
            "stopwords": "_spanish_"
          },
          "stop_words_general" : {
            "type" : "stop",
            "stopwords" : [
              "el",
              "la",
              "los",
              "las",
              "de",
              "en",
              "general"
            ]
          },
          "stop_words_filter" : {
            "type" : "stop",
            "stopwords_path" : "colonies_stopwords.txt"
          },
          "asciifolding_filter" : {
            "type" : "asciifolding",
            "preserve_original" : "true"
          },
          "states_synonym" : {
            "type" : "synonym",
            "synonyms_path" : "states.txt"
          },
          "cities_synonym" : {
            "type" : "synonym",
            "synonyms_path" : "cities.txt"
          },
          "colonies_synonym" : {
            "type" : "synonym",
            "synonyms_path" : "colonies.txt"
          }
        },
        "analyzer" : {
          "states_analyzer" : {
            "filter" : [
              "asciifolding_filter",
              "lowercase",
              "states_synonym"
            ],
            "tokenizer" : "standard"
          },
          "cities_analyzer" : {
            "filter" : [
              "asciifolding_filter",
              "lowercase",
              "cities_synonym",
              "spanish_stop_filter"
            ],
            "tokenizer" : "standard"
          },
          "colonies_analyzer" : {
            "filter" : [
              "asciifolding_filter",
              "lowercase",
              "states_synonym",
              "colonies_synonym",
              "stop_words_filter",
              "spanish_stop_filter"
            ],
            "tokenizer" : "standard"
          },
          "spanish_analyzer" : {
            "filter" : [
              "asciifolding_filter",
              "lowercase",
              "states_synonym",
              "stop_words_general",
              "spanish_stop_filter"
            ],
            "tokenizer" : "standard"
          }
        }
      }
    }
  }
}